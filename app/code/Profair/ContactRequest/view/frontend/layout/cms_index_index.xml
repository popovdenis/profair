<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="profair.promotion.container.shareposition">
            <container htmlTag="div" htmlClass="rightShare"
                       name="profair.promotion.container.shareposition.rightShare" before="leftShare">
                <block class="Profair\ContactRequest\Block\Request\Contact"
                       name="profair.promotion.send_request"
                       template="Profair_ContactRequest::send_request.phtml">
                    <block class="Magento\Cms\Block\Block" name="profair.promotion.send_request.general">
                        <arguments>
                            <argument name="block_id" xsi:type="string">send_request_general</argument>
                        </arguments>
                    </block>
                </block>
            </container>
        </referenceContainer>

        <referenceContainer name="before.body.end">
            <block class="Profair\ContactRequest\Block\Request\Contact"
                   name="profair.reqest.popup"
                   template="Profair_ContactRequest::form.phtml">
            </block>
        </referenceContainer>
    </body>
</page>
