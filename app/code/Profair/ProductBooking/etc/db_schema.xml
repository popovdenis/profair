<?xml version="1.0"?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="profair_product_book" resource="default" engine="innodb" comment="Profair Product Booking Table">
        <column xsi:type="int" name="entity_id" padding="10" unsigned="true" nullable="false" identity="true"
                comment="Entity ID"/>
        <column xsi:type="varchar" name="product_sku" nullable="false" length="64"
                comment="Product SKU"/>
        <column xsi:type="varchar" name="contact_name" length="64"
                comment="Contact Phone Number"/>
        <column xsi:type="varchar" name="contact_phone" nullable="false" length="64"
                comment="Contact Phone Number"/>
        <column xsi:type="varchar" name="contact_email" length="64"
                comment="Contact Email"/>
        <column xsi:type="varchar" name="status" length="150" nullable="false"
                comment="Booking Status"/>
        <column xsi:type="varchar" name="request_type" length="150" nullable="false"
                comment="Request Type"/>
        <column xsi:type="timestamp" name="created_at" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Create Booking Time"/>
        <column xsi:type="timestamp" name="updated_at" on_update="true" nullable="false" default="CURRENT_TIMESTAMP"
                comment="Update Booking Time"/>
        <constraint xsi:type="unique" referenceId="PROFAIR_PRODUCT_BOOK_PRODUCT_SKU_CONTACT_PHONE">
            <column name="product_sku"/>
            <column name="contact_phone"/>
        </constraint>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="entity_id"/>
        </constraint>
        <index referenceId="PROFAIR_PRODUCT_BOOK_PRODUCT_SKU" indexType="btree">
            <column name="product_sku"/>
        </index>
        <index referenceId="PROFAIR_PRODUCT_BOOK_CONTACT_PHONE" indexType="btree">
            <column name="contact_phone"/>
        </index>
    </table>
</schema>
