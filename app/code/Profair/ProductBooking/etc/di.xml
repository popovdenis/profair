<?xml version="1.0"?>
<config xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:ObjectManager/etc/config.xsd">

    <!-- - - - - - - - - - - Interfaces - - - - - - - - - -->

    <preference for="Profair\ProductBooking\Api\Data\ProductBookingInterface"
                type="Profair\ProductBooking\Model\ProductBooking"/>

    <preference for="Profair\ProductBooking\Api\ProductBookingRepositoryInterface"
                type="Profair\ProductBooking\Model\ProductBookingRepository"/>

    <!-- - - - - - - - - - - Booking Products grid - - - - - -->

    <virtualType name="Profair\ProductBooking\Model\ResourceModel\ProductBooking\GridCollection"
                 type="Magento\Framework\View\Element\UiComponent\DataProvider\SearchResult">
        <arguments>
            <argument name="mainTable" xsi:type="string">sa_import_profile</argument>
            <argument name="resourceModel" xsi:type="string">Profair\ProductBooking\Model\ResourceModel\Book</argument>
        </arguments>
    </virtualType>
    <type name="Magento\Framework\View\Element\UiComponent\DataProvider\CollectionFactory">
        <arguments>
            <argument name="collections" xsi:type="array">
                <item name="profair_booking_listing_data_source"
                      xsi:type="string">Profair\ProductBooking\Model\ResourceModel\ProductBooking\GridCollection
                </item>
            </argument>
        </arguments>
    </type>

</config>