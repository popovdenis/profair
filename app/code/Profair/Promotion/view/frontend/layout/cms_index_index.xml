<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="content">
            <container htmlTag="div" htmlClass="mlfShare2" name="profair.promotion.container" before="-">
                <container htmlTag="div" htmlClass="wrap980" name="profair.promotion.container.wrapper" before="-">
                    <container htmlTag="div" htmlClass="shareposition" name="profair.promotion.container.shareposition" before="-">
                        <container htmlTag="div" htmlClass="leftShare" name="profair.promotion.container.shareposition.leftShare" before="-">
                            <container htmlTag="div" name="profair.promotion.container.shareposition.wraptext" before="-">
                                <block class="Magento\Framework\View\Element\Template"
                                       name="profair.promotion.container.banner"
                                       template="Profair_Promotion::promotion.phtml">
                                    <block class="Magento\Cms\Block\Block" name="profair.sale.promotion.banner">
                                        <arguments>
                                            <argument name="block_id" xsi:type="string">sale_promotion</argument>
                                        </arguments>
                                    </block>
                                </block>
                            </container>
                        </container>
                    </container>
                </container>
            </container>
        </referenceContainer>
    </body>
</page>